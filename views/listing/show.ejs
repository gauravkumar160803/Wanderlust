<% layout("/layouts/boilerplate.ejs") -%>
    <script>
        const mapToken = '<%= process.env.MAP_TOKEN %>';
        const listing = JSON.parse('<%- JSON.stringify(listing) %>');
    </script>
    <body>
        <div class="row">
            <div class="col-10 offset-1">
                <br><br>
                <h2>
                    <%= listing.title %>
                </h2>
                <div class="card listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
                    <div class="card-body">
                        <p class="card-text"><i>
                                <%= listing.owner.username %>
                            </i></p>
                        <p class="card-text">
                            <%= listing.description %>
                                <br>
                                <b> &#8377;<%= listing.price.toLocaleString('en-IN') %></b>/ night
                                <br>
                                <%= listing.location %>
                                    <br>
                                    <%= listing.country %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <% if(currentUser&&currentUser._id.equals(listing.owner._id)){ %>
            <div class="btns col-10 offset-1 mb-3">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn2 px-4 me-5">Edit listing</a>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-dark delete-btn px-4">Delete listing</button>
                </form>
            </div>
            <%}%>
                <div class="col-10 offset-1 mb-3">
                    <% if(currentUser){ %>
                        <hr>
                        <h4>Leave a review..</h4>
                        <form id="reviewForm" action="/listings/<%= listing._id %>/reviews" method="POST" novalidate
                            class="needs-validation">
                            <div class="mt-3 mb-3">
                                <div class="star-input">
                                    <label for="rating-value" class="rating-label form-label">Rate this
                                        property:</label>
                                    <input class="form-control" type="hidden" name="review[rating]" id="rating-value"
                                        value="0" />
                                    <span class="star" data-value="1">ðŸŸŠ</span>
                                    <span class="star" data-value="2">ðŸŸŠ</span>
                                    <span class="star" data-value="3">ðŸŸŠ</span>
                                    <span class="star" data-value="4">ðŸŸŠ</span>
                                    <span class="star" data-value="5">ðŸŸŠ</span>
                                    <div class="valid-feedback">Thanks for rating...</div>
                                    <div class="invalid-feedback">Please add rating!!!</div>
                                </div>
                            </div>
                            <div class="mt-3 mb-3">
                                <label class="form-label" for="comment">Comments</label>
                                <div class="position-relative">
                                    <textarea class="form-control" id="comment" name="review[comment]"
                                        required></textarea>
                                    <div class="valid-feedback">Thanks for review..</div>
                                    <div class="invalid-feedback">Please add some comment for review</div>
                                </div>
                            </div>
                            <button class=" btn btn-outline-dark mt-3">Submit</button>
                        </form>
                        <% }%>
                            <hr>
                            <% if(listing.reviews.length> 0){ %>
                                <p class="mb-3"><b>All Reviews</b></p>
                                <div class="row">
                                    <% for(review of listing.reviews) {%>
                                        <div class="card col-5 ms-3 mt-3 ">
                                            <div class="card-body review-body">
                                                <div class="top-content">
                                                    <h5 class="card-title">
                                                        <%=review.author.username %>
                                                    </h5>
                                                    <div class="card-text">
                                                        <%= review.comment %>
                                                    </div>
                                                </div>
                                                <div class="bottom-content">
                                                    <div class="card-text">
                                                        <div class="star-display">
                                                            <% for(let i=1; i <=5; i++) { %>
                                                                <% if(i <=review.rating) { %>
                                                                    <span class="star-filled"><i
                                                                            class="fa-solid fa-star"></i></span>
                                                                    <% } else { %>
                                                                        <span class="star-show"><i
                                                                                class="fa-solid fa-star"></i></span>
                                                                        <% } %>
                                                                            <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% if(currentUser&&currentUser._id.equals(review.author._id)){ %>
                                                <form method="POST"
                                                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                                    <button
                                                        class="btn btn-sm btn-outline-dark mb-2 ms-3">Delete</button>
                                                </form>
                                                <% }%>
                                        </div>
                                        <% }%>
                                </div>
                                <%}%>
                </div>
                <div class="col-10 offset-1 mb-3">
                    <h3>Where youâ€™ll be</h3>
                    <div id="map"></div>
                </div>
                <script src="/js/map.js"></script>
    </body>