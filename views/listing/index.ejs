<% layout("/layouts/boilerplate.ejs") -%>
            <body>
                <h2>Discover Places</h2>
                <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
                    <% for (list of allListings){%>
                        <a href="/listings/<%= list.id %>" style="text-decoration:none;">
                            <div class="card col listing-card">
                                <img src="<%= list.image.url%>" class="card-img" alt="Listing_image"
                                    style="height:20rem;">
                                <div class="card-img-overlay"></div>
                                <div class="card-body">
                                    <h5 class="card-title fw-bold">
                                        <%= list.title %>
                                    </h5>
                                    <p class="card-text">
                                    <div>&#8377;<%= list.price.toLocaleString('en-IN')%>/ night</div>
                                    </p>
                                </div>
                            </div>
                        </a>

                        <%}%>
                </div>

            </body>