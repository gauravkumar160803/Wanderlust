  <% if (success && success.length) { %>
        <div class="alert alert-success alert-dismissible fade show fixed-top w-50 mx-auto mt-2 shadow"  role="alert"
            id="flash-alert">
            <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>

  <% if (error && error.length) { %>
        <div class="alert alert-danger alert-dismissible fade show fixed-top w-50 mx-auto mt-2 shadow"  role="alert"
            id="flash-alert">
            <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>        